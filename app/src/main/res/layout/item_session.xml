<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_marginHorizontal="10dp"
    >

    <FrameLayout
        android:id="@+id/thumbnailFl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_thumbnail_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="@dimen/thumbnailCornerSize"
            app:strokeWidth="1dp"
            app:strokeColor="@color/lightGrey"
            app:cardElevation="0dp"
            >

            <ImageView
                android:id="@+id/session_thumbnail"
                android:background="@drawable/thumb"
                tools:background="@drawable/thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />


        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/session_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:padding="6dp"
            android:background="@drawable/bg_thumbnail_time"
            tools:text="00:00" />


    </FrameLayout>

    <TextView
        android:id="@+id/session_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="6dp"
        android:textColor="@color/yellow"
        android:background="@drawable/bg_tag_company"
        app:layout_constraintStart_toEndOf="@id/thumbnailFl"
        app:layout_constraintTop_toTopOf="@id/thumbnailFl"
        tools:text="카카오엔터프라이즈" />

    <TextView
        android:id="@+id/session_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="6dp"
        android:background="@drawable/bg_tag"
        app:layout_constraintStart_toEndOf="@id/session_company"
        app:layout_constraintTop_toTopOf="@id/thumbnailFl"
        tools:text="서비스" />

    <TextView
        android:id="@+id/session_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/thumbnailFl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/session_company"
        app:layout_constraintTop_toBottomOf="@id/session_company"
        tools:text="이용자의 소중한 일상을 지키는 카카오톡 이용자의 소중한 일상을 지키는 카카오톡" />

</androidx.constraintlayout.widget.ConstraintLayout>