<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.survivalcoding.ifkakao.presentation.detail.DetailViewModel" />

        <variable
            name="sessionAdapter"
            type="com.survivalcoding.ifkakao.presentation.util.SessionListAdapter" />

        <variable
            name="itemDecoration"
            type="com.survivalcoding.ifkakao.presentation.util.SessionItemDecoration" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.detail.DetailFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:collapsedTitleTextAppearance="@style/Widget.Design.CollapsingToolbar"
                app:expandedTitleTextAppearance="@style/Widget.Design.CollapsingToolbar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:contentInsetStart="0dp"
                    android:contentInsetEnd="0dp"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                image="@{vm.currentSession.video.thumbnailUrl}"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:tintMode="src_over"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintDimensionRatio="16:9"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="#80000000" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="10dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{vm.currentSession.title}"
                                android:textColor="@color/white_text"
                                app:layout_constraintEnd_toStartOf="@id/play_button"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="이용자의 소중한 일상을 지키는 카카오톡" />

                            <ImageView
                                android:id="@+id/play_button"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_baseline_play_arrow_24"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/white_text" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{vm.currentSession.video.videoLength}"
                                android:textColor="@color/white_text"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/play_button"
                                tools:text="09:41" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom|center"
                            app:tabTextColor="@color/white_text" />

                    </LinearLayout>

                </Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/background_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_background"
            android:verticalScrollbarPosition="right"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context=".presentation.detail.DetailFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_rest_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_dark_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewPager">

                    <TextView
                        android:id="@+id/tv_detail_sessions_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        android:text="연관세션"
                        android:textColor="@color/white_text"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_related_sessions_list"
                        adapter="@{sessionAdapter}"
                        itemDecoration="@{itemDecoration}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:background="#00000000"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_detail_sessions_title"
                        tools:itemCount="1"
                        tools:listitem="@layout/list_item_session" />

                    <TextView
                        android:id="@+id/btn_more_sessions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="30dp"
                        android:background="@drawable/list_video_thumbnail"
                        android:backgroundTint="#292929"
                        android:fontFamily="@font/kakao_regular"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="10dp"
                        android:text="연관세션 더보기"
                        android:textColor="#a9a9a9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rv_related_sessions_list" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/footer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_more_sessions">

                        <ImageView
                            android:id="@+id/scroll_top_button"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="100dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="25dp"
                            android:background="@drawable/ic_circle_button"
                            android:src="@drawable/ic_baseline_arrow_upward_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/white_text" />

                        <TextView
                            android:id="@+id/previous_if_kakao_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:text="if(kakao)2020 보기"
                            android:textColor="#53E8FB"
                            app:layout_constraintBottom_toTopOf="@+id/corp_text"
                            app:layout_constraintStart_toStartOf="@+id/corp_text" />

                        <TextView
                            android:id="@+id/corp_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginBottom="25dp"
                            android:text="kakao corp."
                            android:textColor="@color/gray_bright_text"
                            android:textSize="15sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>