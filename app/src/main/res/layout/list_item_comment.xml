<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@drawable/list_comment"
    android:padding="20dp">

    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_bright_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="베리베리산성베리" />

    <TextView
        android:id="@+id/comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#ff626262"
        app:layout_constraintStart_toEndOf="@+id/comment_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2021.11.18. 16:35" />

    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white_text"
        app:layout_constraintStart_toStartOf="@+id/comment_name"
        app:layout_constraintTop_toBottomOf="@id/comment_name"
        tools:text="탈퇴 하고 싶은데 어떻게 싸나요" />

</androidx.constraintlayout.widget.ConstraintLayout>