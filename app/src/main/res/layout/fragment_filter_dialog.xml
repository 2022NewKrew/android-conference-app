<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/closeIbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="16dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/closeIbt"
        app:layout_constraintBottom_toTopOf="@id/resetBt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심분야"
                android:textAppearance="@style/HeaderText"
                android:layout_marginBottom="16dp"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fieldFbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                android:layout_marginBottom="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심키워드"
                android:textAppearance="@style/HeaderText"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스·비즈니스"
                android:layout_marginBottom="16dp"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/classFlb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기술"
                android:layout_marginBottom="16dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/techFlb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공동체분류"
                android:layout_marginBottom="16dp"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/companyFlb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                android:layout_marginBottom="32dp"/>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/resetBt"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/darkGrey"
        android:text="초기화"
        android:textColor="@color/lightGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/applyBt"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:backgroundTint="@color/cyan"
        android:text="적용"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>