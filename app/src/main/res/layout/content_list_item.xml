<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sessionData"
            type="com.survivalcoding.ifkakao.domain.model.IkSessionData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#00ffffff">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/session_cv_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/background_button_gray"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/iv_list_item_thumbnail"
                thumbnailImage="@{sessionData.video.thumbnailUrl}"
                android:layout_width="120dp"
                android:layout_height="68dp"
                android:background="@color/black"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_video_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@drawable/list_video_thumbnail_length"
                android:fontFamily="@font/kakao_regular"
                android:paddingHorizontal="5dp"
                android:paddingBottom="3dp"
                android:paddingTop="4dp"
                android:text="@{sessionData.video.videoLength}"
                android:textColor="@color/text_color_white"
                android:textSize="12sp"
                tools:text="09:41" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/list_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/list_company"
            android:fontFamily="@font/kakao_regular"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@{sessionData.company}"
            android:textColor="@color/text_color_yellow"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/session_cv_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="카카오" />

        <TextView
            android:id="@+id/list_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/list_field"
            android:fontFamily="@font/kakao_regular"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@{sessionData.field}"
            android:textColor="@color/text_color_white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/list_company"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="서비스" />

        <TextView
            android:id="@+id/tv_highlight_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/kakao_regular"
            android:text="@{sessionData.title}"
            android:textColor="@color/text_color_white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/session_cv_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/list_company"
            tools:text="이용자의 소중한 일상을 지키는 카카오톡" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>