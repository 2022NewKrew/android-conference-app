<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="#00ffffff">

    <ImageView
        android:id="@+id/iv_list_item_thumbnail"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="@drawable/list_video_thumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_video_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_video_thumbnail_length"
        android:text="@string/list_default_time"
        android:textColor="@color/text_color_white"
        android:paddingHorizontal="5dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_list_item_thumbnail"
        app:layout_constraintEnd_toEndOf="@+id/iv_list_item_thumbnail" />

    <TextView
        android:id="@+id/list_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/list_company"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:text="@string/list_company_name"
        android:textColor="@color/text_color_yellow"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_list_item_thumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/list_field"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:text="@string/list_field_name"
        android:textColor="@color/text_color_white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/list_company"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_highlight_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_color_white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_list_item_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/list_company" />


</androidx.constraintlayout.widget.ConstraintLayout>