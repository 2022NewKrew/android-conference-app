<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="sessionData"
            type="com.survivalcoding.ifkakao.domain.model.IkSessionData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:paddingHorizontal="25dp"
        android:paddingVertical="25dp"
        tools:background="@color/black_background">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/list_item_speaker_image_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/gray_dark_background"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/list_item_speaker_image"
                thumbnail="@{sessionData.video.thumbnailUrl}"
                android:layout_width="120dp"
                android:layout_height="68dp"
                android:background="@color/black"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/list_item_session_thumbnail_video_length_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:background="@color/gray_dark_background"
                android:fontFamily="@font/kakao_regular"
                android:paddingHorizontal="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="3dp"
                android:text="@{sessionData.video.videoLength}"
                android:textColor="@color/white_text"
                android:textSize="12sp"
                android:visibility="@{sessionData.hasVideo? View.VISIBLE : View.GONE}"
                tools:text="09:41" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/list_item_session_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/list_company"
            android:fontFamily="@font/kakao_regular"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@{sessionData.company}"
            android:textColor="@color/yellow_text"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/list_item_speaker_image_card"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="카카오" />

        <TextView
            android:id="@+id/list_item_session_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/list_field"
            android:fontFamily="@font/kakao_regular"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:text="@{sessionData.field}"
            android:textColor="@color/white_text"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/list_item_session_company"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="서비스" />

        <TextView
            android:id="@+id/list_item_session_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/kakao_regular"
            android:text="@{sessionData.title}"
            android:textColor="@color/white_text"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/list_item_session_company"
            app:layout_constraintTop_toBottomOf="@+id/list_item_session_company"
            tools:text="이용자의 소중한 일상을 지키는 카카오톡" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>