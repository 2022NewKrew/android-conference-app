<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="40dp">

    <ImageButton
        android:id="@+id/kakaotalk_share_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_talk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/facebook_share_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/kakaotalk_share_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/twitter_share_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_twit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/facebook_share_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/link_share_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button_background"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/twitter_share_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/favorite_toggle"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_button_background"
        android:backgroundTint="@color/favorite_toggle_background_color"
        android:foreground="?android:attr/selectableItemBackground"
        android:text=""
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/favorite_image_view"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_favorite"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="@id/favorite_toggle"
        app:layout_constraintEnd_toEndOf="@id/favorite_toggle"
        app:layout_constraintStart_toStartOf="@id/favorite_toggle"
        app:layout_constraintTop_toTopOf="@id/favorite_toggle"
        app:tint="@color/button_text_color" />

</androidx.constraintlayout.widget.ConstraintLayout>