<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="40dp">

    <ImageButton
        android:id="@+id/kakaotalk_share_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_talk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/facebook_share_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/kakaotalk_share_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/twitter_share_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_twit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/facebook_share_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/link_share_button"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button_background"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/twitter_share_button"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>