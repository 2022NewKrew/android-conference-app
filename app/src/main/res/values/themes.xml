<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ifkakao" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#FF444444</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="drawerArrowStyle">@style/Theme.Ifkakao.DrawerArrowStyle</item>
        <item name="navigationViewStyle">@style/Widget.Design.NavigationView</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="drawerLayoutStyle">@style/Theme.Ifkakao.DrawerLayoutStyle</item>
    </style>
    <style name="Theme.Ifkakao.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="Theme.Ifkakao.DrawerLayoutStyle" parent="Widget.Material3.DrawerLayout">
        <item name="android:fragmentOpenEnterAnimation">@anim/nav_default_pop_enter_anim</item>
    </style>
</resources>