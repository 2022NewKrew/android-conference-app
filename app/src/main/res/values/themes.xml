<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ifkakao" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/kakao_regular</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/kakao_regular</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28dp</item>
    </style>

    <style name="ToolbarWithWhiteIcon">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="TabWidget.Title" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SpeakerProfileImage">
        <item name="cornerSize">27dp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="backgroundTint">@color/button_background_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>
</resources>