<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ifkakao" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">@color/lightGrey</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="android:listDivider">@color/lightGrey</item>
        <item name="tabStyle">@style/Theme.Ifkakao.TabStyle</item>
        <item name="android:colorBackground">@color/darkGrey</item>
        <item name="android:dialogTheme">@style/Theme.Ifkakao.DialogTheme</item>
    </style>
    <style name="Theme.Ifkakao.TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Theme.Ifkakao.DialogTheme" parent="Theme.Ifkakao">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/darkGrey</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>